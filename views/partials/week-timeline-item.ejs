  <span class="timeline-date"><%= week.displayDate %></span>
  <span class="timeline-genre">
    <% if (week.genre_name) { %>
      <%= week.genre_name %>
    <% } else { %>
      <em>No genre set</em>
    <% } %>
  </span>
  <% if (!week.id || week.phase === 'planning') { %>
    <a href="/set-genre/<%= week.date %>" class="timeline-action">Set Genre â†’</a>
  <% } %>
</div>
