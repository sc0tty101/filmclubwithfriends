<div class="week-card compact">
  <div class="compact-header">
    <h4><%= week.displayDate %></h4>
    <span class="phase-badge phase-<%= week.phase || 'planning' %>">
      <%= week.phase || 'planning' %>
    </span>
  </div>
  <div class="compact-content">
    <% if (week.genre_name) { %>
      <div class="genre-line">
        Genre: <%= week.genre_name %>
      </div>
    <% } %>
    <% if (week.nomination_count > 0) { %>
      <div class="stats-line">
        <%= week.nomination_count %> nominations, <%= week.vote_count %> votes
      </div>
    <% } %>
  </div>
  <div class="compact-actions">
    <% if (week.phase === 'complete') { %>
      <a href="/results/<%= week.date %>" class="btn btn-small btn-secondary">View</a>
    <% } %>
  </div>
</div>
