<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Film Club</title>
  <link rel="stylesheet" href="/styles/main.css">
  <link rel="stylesheet" href="/styles/calendar-redesign.css">
</head>
<body>
  <!-- Fixed Header Bar (Letterboxd-inspired) -->
  <header class="app-header">
    <div class="header-container">
      <div class="header-logo">
        <h1>ðŸŽ¬ Film Club</h1>
      </div>
      
      <nav class="header-nav">
        <a href="/" class="nav-link active">Calendar</a>
        <a href="/statistics" class="nav-link">Statistics</a>
        <a href="/manage-genres" class="nav-link">Genres</a>
        <a href="/admin/table-view" class="nav-link">Table</a>
      </nav>
      
      <div class="header-user">
        <select id="currentUser" class="user-select">
          <option value="">Select Member...</option>
          <% members.forEach(member => { %>
            <option value="<%= member.name %>"><%= member.name %></option>
          <% }) %>
        </select>
      </div>
    </div>
  </header>

  <main class="app-main">
    <!-- Hero Section for Current Week -->
    <% if (weeks.current) { %>
    <section class="hero-week">
      <div class="hero-backdrop" 
           style="background-image: url('<%= currentWeekFilms[0]?.backdrop_url ? `https://image.tmdb.org/t/p/w1280${currentWeekFilms[0].backdrop_url}` : '' %>')">
      </div>
      <div class="hero-content">
        <div class="hero-week-info">
          <span class="hero-label">This Week</span>
          <h2 class="hero-genre"><%= weeks.current.genre || 'No genre set' %></h2>
          <div class="hero-meta">
            <span class="week-dates">
              <%= new Date(weeks.current.date).toLocaleDateString('en-US', { month: 'long', day: 'numeric' }) %>
              - 
              <%= new Date(new Date(weeks.current.date).getTime() + 6*24*60*60*1000).toLocaleDateString('en-US', { month: 'long', day: 'numeric' }) %>
            </span>
          </div>
        </div>
        
        <div class="hero-actions">
          <% if (weeks.current.phase === 'planning') { %>
            <a href="/set-genre/<%= weeks.current.date %>" class="btn btn-hero">Set Genre</a>
          <% } else if (weeks.current.phase === 'nomination') { %>
            <a href="/nominate/<%= weeks.current.date %>" class="btn btn-hero">Nominate Film</a>
            <span class="phase-status"><%= weeks.current.nomination_count || 0 %> nominations</span>
          <% } else if (weeks.current.phase === 'voting') { %>
            <a href="/vote/<%= weeks.current.date %>" class="btn btn-hero">Vote Now</a>
            <span class="phase-status"><%= weeks.current.vote_count || 0 %> votes cast</span>
          <% } else if (weeks.current.phase === 'complete') { %>
            <a href="/results/<%= weeks.current.date %>" class="btn btn-hero">View Results</a>
            <span class="phase-status">Winner: <%= weeks.current.winner_title %></span>
          <% } %>
        </div>

        <!-- Current Week Films Grid -->
        <% if (currentWeekFilms && currentWeekFilms.length > 0) { %>
        <div class="hero-films">
          <h3>This Week's Nominations</h3>
          <div class="films-grid">
            <% currentWeekFilms.forEach(film => { %>
            <div class="film-card-mini">
              <% if (film.poster_url) { %>
                <img src="https://image.tmdb.org/t/p/w200<%= film.poster_url %>" 
                     alt="<%= film.film_title %>" 
                     class="film-poster-mini">
              <% } %>
              <div class="film-info-mini">
                <h4><%= film.film_title %></h4>
                <span class="film-year"><%= film.film_year %></span>
                <span class="film-nominator">by <%= film.user_name %></span>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
        <% } %>
      </div>
    </section>
    <% } %>

    <!-- Calendar Grid -->
    <div class="calendar-container">
      <!-- Upcoming Weeks -->
      <section class="calendar-section">
        <h2 class="section-title">Upcoming</h2>
        <div class="weeks-grid">
          <% weeks.upcoming.forEach(week => { %>
            <%- include('partials/week-card', { week: week }) %>
          <% }) %>
        </div>
      </section>

      <!-- Future Weeks -->
      <section class="calendar-section">
        <h2 class="section-title">Future Schedule</h2>
        <div class="weeks-timeline">
          <% weeks.future.slice(0, 20).forEach(week => { %>
            <%- include('partials/week-timeline-item', { week: week }) %>
          <% }) %>
        </div>
        <% if (weeks.future.length > 20) { %>
          <button class="btn-show-more" onclick="showAllFutureWeeks()">
            Show <%= weeks.future.length - 20 %> more weeks
          </button>
        <% } %>
      </section>

      <!-- Past Weeks -->
      <% if (weeks.past.length > 0) { %>
      <section class="calendar-section collapsed">
        <h2 class="section-title clickable" onclick="toggleSection(this)">
          Past Weeks (<%= weeks.past.length %>)
          <span class="toggle-icon">â–¼</span>
        </h2>
        <div class="section-content">
          <div class="weeks-grid compact">
            <% weeks.past.forEach(week => { %>
              <%- include('partials/week-card-compact', { week: week }) %>
            <% }) %>
          </div>
        </div>
      </section>
      <% } %>
    </div>
  </main>

  <script src="/js/calendar.js"></script>
</body>
</html>
